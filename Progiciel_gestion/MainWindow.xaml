            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/jument.png"/>
            </Image.OpacityMask>
        </Image>
        <Image Margin="217,-13,180,212" Source="jument.png" Stretch="Fill"/>
        <Label x:Name="lbMessage" Content="" HorizontalAlignment="Left" Margin="263,203,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtBoxPassword" HorizontalAlignment="Left" Margin="217,156,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
